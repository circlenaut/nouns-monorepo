{
  "name": "@nouns/contracts",
  "version": "0.3.0",
  "description": "Nouns solidity contracts & artifacts",
  "author": "Nounders",
  "homepage": "https://nouns.wtf",
  "license": "GPL-3.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "clean:modules": "rimraf dist modules tsconfig.build.tsbuildinfo",
    "clean:all": "rimraf artifacts cache dist foundry-cache foundry-out typechain node_modules tsconfig.build.tsbuildinfo",
    "build": "yarn build:sol --force && yarn build:ts && yarn build:declarations",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "hardhat": "npx hardhat",
    "task:accounts": "npx hardhat accounts",
    "task:deploy": "npx hardhat deploy",
    "task:deploy-and-configure": "npx hardhat deploy-and-configure",
    "task:deploy-and-configure-short-times": "npx hardhat deploy-and-configure-short-times",
    "task:mint-noun": "npx hardhat mint-noun",
    "task:populate-descriptor": "npx hardhat populate-descriptor",
    "task:run-local": "npx hardhat run-local",
    "test": "npx hardhat test",
    "test:ts": "ts-mocha -n loader=ts-node/esm -p tsconfig.json \"test/**/*.test.ts\"",
    "coverage": "npx hardhat coverage",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "solidity-coverage": "0.8.2",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/contracts-upgradeable": "^4.8.1",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/prompt": "^1.1.5",
    "base64-sol": "^1.1.0",
    "ethereum-waffle": "^4.0.9",
    "hardhat": "^2.12.6",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier-plugin-solidity": "^1.1.1",
    "prompt": "^1.3.0",
    "shx": "^0.3.4",
    "typechain": "^8.1.1"
  }
}
